<h1>Listing users</h1>
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>User</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td>
      <%= link_to 'Show', user if can? :read, User %>
      &nbsp;
      <%= link_to 'Edit', edit_user_path(user) if can? :update, User %>
      &nbsp;
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete if can? :destroy, User %>
    </td>
  </tr>
<% end %>
</table>

<br />
