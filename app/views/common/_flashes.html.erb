<% unless flash[:notice].blank? %>
    <%= content_tag :div, flash[:notice], :class => "alert alert-info" , :id => "notice" %>
    <%= content_tag :script, :type => "text/javascript" do -%>
              setTimeout("new Effect.Fade('notice');", 15000);
    <% end %>    
<% end %>

